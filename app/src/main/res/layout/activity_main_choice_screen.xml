<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gray_bg"
    tools:context="com.sololaunches.www.keralarailandmetro.MainChoiceScreen">



    <ImageButton
        android:id="@+id/rail_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:background="@drawable/circluar_button"
        app:srcCompat="@drawable/train_logo"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/helpline_option"
        android:layout_alignStart="@+id/helpline_option" />

        <ImageButton
            android:id="@+id/metro_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circluar_button"
            app:srcCompat="@drawable/metro_logo"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/rail_option"
            android:layout_toEndOf="@+id/rail_option" />

        <ImageButton
            android:id="@+id/helpline_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:background="@drawable/circluar_button"
            app:srcCompat="@drawable/helpline_logo"
            android:layout_below="@+id/metro_option"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/share_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/helpline_option"
        android:layout_alignEnd="@+id/metro_option"
        android:layout_alignRight="@+id/metro_option"
        app:srcCompat="@drawable/fb_share" />

</RelativeLayout>
