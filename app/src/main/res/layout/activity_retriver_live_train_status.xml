<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="400dp"
    android:layout_height="match_parent"
    android:background="@drawable/gray_bg"
    tools:context="com.sololaunches.www.keralarailandmetro.RetrieverLiveTrainStatus">


    <EditText
        android:id="@+id/train_number_fare"
        android:layout_width="350dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/datePicker2"
        android:layout_marginTop="46dp"
        android:background="@android:color/background_light"
        android:ems="10"
        android:hint="Enter Train No. Ex :16345"
        android:inputType="textPersonName"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="18sp" />


    <DatePicker
        android:id="@+id/datePicker2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:background="@android:color/background_light"
        android:calendarViewShown="false"
        android:datePickerMode="spinner"
        android:scaleX="1.1"
        android:scaleY="1.1"
        android:visibility="visible"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/getCurrentStats"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="17dp"
        android:background="@android:color/holo_green_light"
        android:text="  Get Status "
        android:textAllCaps="false"
        android:textSize="18sp"
        android:layout_below="@+id/train_number_fare"
        android:layout_centerHorizontal="true" />

    <ProgressBar
        android:id="@+id/currentStatusProgress"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/datePicker2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/close"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Choose Date on which Train Starts!!!"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text='Press "Get Status" button '
        android:textColor="@android:color/black"
        android:layout_above="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        app:srcCompat="@android:drawable/ic_menu_help"
        android:layout_alignBottom="@+id/train_number_fare"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/close"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginEnd="56dp"
        android:layout_marginRight="56dp"
        android:background="@drawable/close"
        android:textAllCaps="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/back"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/back"
        android:textAllCaps="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
